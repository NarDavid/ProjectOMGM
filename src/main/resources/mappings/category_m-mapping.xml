<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="CategoryDAO_M">
	<insert id="insertCategory" parameterType="category_m">
		INSERT INTO CATEGORY (CATEGORY_NO, CATEGORY_NAME) 
		VALUES((select nvl(max(CATEGORY_NO), 0)+1 from CATEGORY),#{CATEGORY_NAME})
	</insert>
	<update id="updateCategory" parameterType="category_m">
		UPDATE CATEGORY SET
		CATEGORY_NAME=#{CATEGORY_NAME},CATEGORY_USE=#{CATEGORY_USE} 
		WHERE CATEGORY_NO=#{CATEGORY_NO}
	</update>
	<delete id="deleteCategory" parameterType="category_m">
		DELETE FROM CATEGORY WHERE CATEGORY_NO=#{CATEGORY_NO}
	</delete>
	<select id="selectCategory" resultType="category_m" parameterType="category_m">
		SELECT * FROM CATEGORY WHERE CATEGORY_NO=#{CATEGORY_NO}
	</select>
	<select id="selectListAllCategory" resultType="category_m" parameterType="category_m">
		SELECT * FROM CATEGORY ORDER BY CATEGORY_USE DESC , CATEGORY_NO ASC;
	</select>
</mapper>