    <select id="getMallOrderList" resultType="mallOrder">
        SELECT * FROM order_status
    </select>

    <delete id="deleteMallOrder" parameterType="mallOrder">
        DELETE FROM order_status WHERE order_status_no=#{order_status_no}
    </delete>
