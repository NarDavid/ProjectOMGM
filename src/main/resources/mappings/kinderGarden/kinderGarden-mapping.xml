<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="KinderGardenDAO">

    <resultMap type="KinderGardenVO" id="KinderGardenResult">
        <id property="seq" column="SEQ" />
        <result property="title" column="TITLE"/>
        <result property="regDate" column="REGDATE"/>
        <result property="no" column="NO"/>
        <result property="time" column="TIME"/>
        <result property="program" column="PROGRAM"/>
    </resultMap>

    <!-- 실 사용 -->
    <select id="memberTable" parameterType="ManagementVO" resultMap="ManagementResult">
        <choose>
            <when test="type != '관리자'">
                SELECT * FROM member WHERE type != '관리자' ORDER BY seq
            </when>
            <otherwise>
                SELECT * FROM member WHERE type = '관리자' ORDER BY seq
            </otherwise>
        </choose>
    </select>


</mapper>
